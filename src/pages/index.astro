---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import GitHubIcon from "../assets/media/icons/GitHubIcon.astro";
import LinkedInIcon from "../assets/media/icons/LinkedInIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../assets/media/icons/MailIcon.astro";
import Experience from "../components/Experience.astro";
import WorkIcon from "../assets/media/icons/WorkIcon.astro";
import ProyectoIcon from "../assets/media/icons/ProyectoIcon.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
---

<Layout
  title="Dev Esteban Portfolio - Desarrollador y Programador Web"
  description="Este es mi portfolio web, donde puedo mostrar mis habilidades y experiencia en desarrollo web."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24" id="top">
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Esteban
        <a
          href="https://www.linkedin.com/in/estebanfernandezgonzalez/"
          target="_blank"
          rel="noopener"
          class="flex justify-cente items-center"
        >
          <Badge> Disponible para trabajar </Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
        <span>0 años de experiencia.</span>
        <span class="text-yellow-200/90">Desarrollador Web.</span>
        <span class="text-red-200/90">De Granada, España.</span>
        <span class="opacity-85"
          >Especializado en crear soluciones con gran pasión por el Frontend
          pero también me defiendo con Backend.</span
        >
      </h2>
      <nav class="flex gap-4 mt-9 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/estebanfernandezgonzalez/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/fergone03">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:fergonesteban03@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          fergonesteban03@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Badge> Sobre mí </Badge>
      </h2>
      <p class="text-lg mb-4 text-pretty">
        Soy un desarrollador web con experiencia en el desarrollo de sitios web,
        aplicaciones web y aplicaciones móviles. Actualmente trabajo como
        desarrollador web en una empresa de tecnología, donde me dedico a crear
        soluciones para mejorar la experiencia del usuario y mejorar la
        eficiencia en el trabajo.
      </p>
    </SectionContainer>

      <SectionContainer id="proyectos">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
          <ProyectoIcon class="size-10" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="experiencia">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
          <WorkIcon class="size-10" />
          Experiencia laboral
        </h2>
        <Experience />
        <SectionContainer />

      <SectionContainer id="contacto">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
          <MailIcon class="size-10" />
          Contacto
        </h2>
        <Contact />
      </SectionContainer>
  </main>
</Layout>
